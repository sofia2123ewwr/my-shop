<header class="inset-x-0 top-0">
  <nav class="container-nav">
    <div class="px-6 w-full flex flex-wrap items-center justify-between">
      <div class="flex items-center w-8 h-8">
        <%= image_tag("mitten.png", alt: "Mitten")  %>
      </div>
      <div class="px-10 navbar-collapse grow items-center">
        <ul class="header-unordered-list">
          <li class="link-page">
            <%= link_to "Home", root_path %>
          </li>
          <li class="link-page">
            <%= link_to "Products", products_path %>
          </li>
        </ul>
      </div>
      <div class="flex items-center lg:ml-auto">
        <% if user_signed_in? %>
          <%= link_to "#{current_user.first_name} #{current_user.last_name}", orders_path, class: "link-name" %>
          <%= button_to("LOG OUT", destroy_user_session_path, method: :delete, class: "header-link") %>
        <% else %>
          <%= link_to 'Log in', new_user_session_path, class: "header-link" %>
        <% end %>
          <%= link_to "Sing Up", new_user_registration_path, class: "header-link-sign" %>
      </div>
    </div>
  </nav>
</header>
