<div class="bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
      <div class="max-w-md mx-auto">
        <%= simple_form_for @order do |form| %>
          <%= form.simple_fields_for :order_detail do |f_detail| %>
            <div class="flex items-center space-x-5">
              <div class="h-14 w-4 bg-orange-600 rounded-full flex flex-shrink-0 justify-center items-center text-gray-200 text-2xl font-mono">O</div>
              <div class="block pl-2 font-semibold text-xl self-start text-gray-700">
                <h2 class="leading-relaxed">Create Order</h2>
                <p class="text-sm text-gray-500 font-normal leading-relaxed">Write your data</p>
              </div>
            </div>
            <div class="divide-y divide-gray-200">
              <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
              <% if user_signed_in? %>
                <%= render 'orders/signed_form', f_detail: f_detail %>
              <% elsif %>
                <%= render 'orders/form', f_detail: f_detail %>
              <% end %>
              </div>
            </div>
            <%= f_detail.simple_fields_for :address do |f_address| %>
              <div class="pb-10 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
              <%= f_address.input :country, priority: ["UA"], :label => false, :placeholder => 'City', :input_html => { :class => 'px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600' }%>
              </div>
              <div class="flex items-center space-x-4">
                <div class="flex flex-col">
                  <div class="relative focus-within:text-gray-600 text-gray-400">
                    <%= f_address.input :city, :label => false, :placeholder => 'City', :input_html => { :class => 'px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600' } %>
                  </div>
                </div>
                <div class="flex flex-col">
                  <div class="relative focus-within:text-gray-600 text-gray-400">
                    <%= f_address.input :street, :label => false, :placeholder => 'Street', :input_html => { :class => 'px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600' } %>
                  </div>
                </div>
              </div>
              <div class="divide-y divide-gray-200">
                <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
                  <div class="flex flex-col">
                    <%= f_address.input :comment, as: :text, :label => false, :placeholder => 'what else do you need????????', :input_html => { :class => 'px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600' } %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
          <div class="pt-4 flex items-center space-x-4">
            <%= link_to cart_path(@current_cart), class: "flex justify-center items-center w-full text-gray-900 px-4 py-3 rounded-md focus:outline-none hover:bg-gray-200 hover:text-orange-600" do %>
              <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
              Cancel
            <% end %>
            <%= form.button :submit, class: "bg-orange-600 flex justify-center items-center w-full text-white px-4 py-3 rounded-md focus:outline-none hover:bg-gray-200 hover:text-orange-600" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
