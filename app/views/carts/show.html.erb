<div class="bg-gray-100 pt-20">
  <h2 class="title-cart">Cart</h2>
  <div class="block-products">
    <div class="rounded-lg md:w-2/3">
      <% @cart_products.each do |cart_product| %>
        <%= render 'cart_product', cart_product: cart_product %>
      <% end %>
    </div>
    <div class="block-global">
      <% @cart_products.each do |cart_product| %>
        <div class="block-global-info">
          <p><%= cart_product.product.name %></p>
          <p><%= cart_product.quantity %></p>
          <p><%= cart_product.total_price %></p>
        </div>
      <% end %>
      <hr class="my-4"/>
      <div class="flex justify-between">
        <p class="text-lg font-bold">Sum</p>
        <p class="mb-1 text-lg font-bold"><%= number_to_currency(@cart_sub_total, unit: "â‚´", format: "%n %u") %></p>
      </div>
        <%= link_to "Order", new_order_path, class: "button-order" %>
        <%= button_to 'Empty Cart', empty_cart_cart_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "button-order" %>
      </button>
    </div>
  </div>
</div>
